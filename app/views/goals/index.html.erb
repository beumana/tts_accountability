<p id="notice"><%= notice %></p>

<h1>All Goals Achieved By Anyone Ever</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @goal.each do |x| %>
      <tr>
        <td><%= x.description %></td>
        <td><%= x.user.username %></td>
        <td><%= link_to 'Show', x %></td>
        <td><%= link_to 'Edit', edit_goal_path(x) %></td>
        <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path %>